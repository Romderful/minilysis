{
  "$schema": "https://raw.githubusercontent.com/jetpack-io/devbox/master/.schema/devbox.schema.json",
  "packages": [
    "git@latest",
    "python@3.13",
    "uv@latest",
    "pnpm@latest"
  ],
  "env": {
    "VENV_DIR": "${PWD}/back/.venv",
    "PYTHON_BIN": "${PWD}/.devbox/nix/profile/default/bin/python3.13"
  },
  "shell": {
    "init_hook": [
      "rm -rf ${VENV_DIR} || true",
      "uv venv --python ${PYTHON_BIN} ${VENV_DIR}",
      "cd back && uv sync --python ${VENV_DIR}/bin/python",
      "source ${VENV_DIR}/bin/activate"
    ]
  }
}