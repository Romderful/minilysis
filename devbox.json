{
  "$schema": "https://raw.githubusercontent.com/jetpack-io/devbox/master/.schema/devbox.schema.json",
  "packages": [
    "git@latest",
    "python@3.13",
    "uv@latest",
    "pnpm@latest"
  ],
  "env": {
    "VENV_DIR": "back/.venv"
  },
  "shell": {
    "init_hook": [
      "cd back",
      "uv sync",
      "source .venv/bin/activate"
    ]
  }
}
