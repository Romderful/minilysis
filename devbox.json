{
  "$schema": "https://raw.githubusercontent.com/jetpack-io/devbox/master/.schema/devbox.schema.json",
  "packages": [
    "git@latest",
    "python@3.13",
    "uv@latest",
    "pnpm@latest"
  ],
  "env": {
    "VENV_DIR": "${PWD}/back/.venv",
    "UV_PYTHON": "${DEVBOX_PACKAGES_DIR}/bin/python3.13"
  },
  "shell": {
    "init_hook": [
      "uv sync --project ${PWD}/back"
    ]
  }
}